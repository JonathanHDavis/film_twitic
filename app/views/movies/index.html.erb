<h1>Movies</h1>

<ul class="nav navbar-nav navbar-right">
  <% if current_user %>
    <li><span class="profile-email"><%= current_user.email %><span></li>
    <li><%= link_to "sign out", destroy_user_session_path, method: :delete %></li>
  <% else %>
    <li> <%= link_to "register", new_user_registration_path %></li>
    <li> <%= link_to "sign in", user_session_path %></li>
  <% end %>
</ul>

<%= link_to "Home", root_path %>

<% if current_user %>
  <%= link_to "Create New Movie", new_movie_path %>
<% end %>
<%= link_to "Click Here for Genre List", genres_path %>


  <br />
  <br />
  <table>
    <tr>
      <th>Title</th>
      <th></th>
      <th></th>
    </tr>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to(movie.title, movie_path(movie)) %></td>

          <% if current_user %>
            <td><%= link_to "edit", edit_movie_path(movie) %></td>
            <td><%= link_to "delete", movie_path(movie), method: :delete, data: {confirm: "Are you sure you want to delete this movie?"}%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>