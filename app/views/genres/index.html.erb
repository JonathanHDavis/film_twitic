<h1>Genres</h1>

<ul class="nav navbar-nav navbar-right">
  <% if current_user %>
    <li><span class="profile-email"><%= current_user.email %><span></li>
    <li><%= link_to "sign out", destroy_user_session_path, method: :delete %></li>
  <% else %>
    <li> <%= link_to "register", new_user_registration_path %></li>
    <li> <%= link_to "sign in", user_session_path %></li>
  <% end %>
</ul>

<%= link_to "Home", root_path %>

<% if current_user %>
  <%= link_to "Create New Genre", new_genre_path %>
<% end %>
<%= link_to "Click Here for Movie List", movies_path %>

<br />
<br />
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to(genre.name, genre_path(genre)) %></td>

        <% if current_user %>
          <td><%= link_to "edit", edit_genre_path(genre) %></td>
          <td><%= link_to "delete", genre_path(genre), method: :delete, data: {confirm: "Are you sure you want to delete this genre?"}%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>